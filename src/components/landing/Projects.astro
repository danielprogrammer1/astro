---
    import {projectos} from "../../config/Project.json"
---

<h2 class="font-bold text-5xl my-5 text-center">Projects</h2>

{
    projectos.map((project)=>(
        <div class="flex flex-col mb-2 text-center md:text-left md:flex-row">
            <div class="flex-1 p-4">
                <h2 class="font-bold text-center text-2xl my-4">{project.title}</h2>
                <p class="my-4">{project.description}</p>
                <button class="bg-indigo-500 px-3 py-3 hover:bg-indigo-400">
                    More info
                </button>

            </div>
            <div class="flex-1">
                <img src={project.image} class="w-72" m-auto>
            </div>
        </div>
    ))
}
